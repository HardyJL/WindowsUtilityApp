<Page x:Class="GeneralComputing.Views.PasswordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeneralComputing.Views" 
      
      mc:Ignorable="d" 
      Background="#656565"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordsPage">

    <Grid>
        <TextBox x:Name="userNameInput" HorizontalAlignment="Center" Margin="0,98,0,0" Text="{Binding UserName }" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="52"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,155,0,0" Text="{Binding PasswordText}" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="240"/>

        <Button x:Name="createUser" Content="Create user" HorizontalAlignment="Center" Margin="0,298,0,0" VerticalAlignment="Top" Height="32" Width="184" Command="{Binding CreateUserCommand}"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,261,0,0" VerticalAlignment="Top" Height="32" Width="184" Command="{Binding GeneratePasswordCommand}"/>

    </Grid>
</Page>
