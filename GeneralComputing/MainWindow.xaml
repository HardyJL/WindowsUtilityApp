<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  x:Class="GeneralComputing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneralComputing" 
        xmlns:icon="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
        mc:Ignorable="d"
        Title="Johannes sein Passwortgenerator" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Height="40" Width="206" Command="{Binding GeneratePasswordCommand}">
            <icon:PackIconModern Width="20" Height="20" Kind="Acorn"/>
        </Button>
        <TextBlock Text="{Binding PasswordText}" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Height="158" Width="738" RenderTransformOrigin="0.489,0.507" TextWrapping="Wrap" />
    </Grid>
</mah:MetroWindow>